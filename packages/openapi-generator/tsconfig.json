{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "lib": ["es2016", "es2017"],
    "module": "commonjs",
    "incremental": true,
    "outDir": "dist",
    "downlevelIteration": true
  },
  "types": ["node"],
  "include": ["src/**/*"]
}
